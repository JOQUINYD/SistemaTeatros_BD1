@model SistemaTeatroWebApp.Models.AppModels.Produccion

@{
    ViewBag.Title = "Actualizar Estado de la Produccion";
    Layout = "~/Views/Shared/_LayoutTeatroAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Producciones</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.NombreObra)
    @Html.HiddenFor(model => model.Tipo)
    @Html.HiddenFor(model => model.FechaFin)
    @Html.HiddenFor(model => model.FechaInit)
    @Html.HiddenFor(model => model.Descripcion)
    @Html.HiddenFor(model => model.Estado)
  

    <div class="form-group">
        @Html.LabelFor(model => model.NombreObra, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.NombreObra, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Teatro, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Teatro, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdProduccionEstado, "IdProduccionEstado", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IdProduccionEstado", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdProduccionEstado, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "DetailsProduccion", new { IdProduccion = Model.Id })
</div>
